{
    "name": "ifcastle/os-utilities",
    "description": "Library of modules for interacting with the operating system.",
    "type": "library",
    "license": "MIT",
    "keywords": ["os", "utilities"],
    "autoload": {
        "psr-4": {
            "IfCastle\\OsUtilities\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IfCastle\\OsUtilities\\": "./tests"
        }
    },
    "require": {
        "php": "^8.4",
        "ifcastle/exceptions": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "amphp/php-cs-fixer-config": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.60",
        "ifcastle/codestyle": "^0.2.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit ./tests"
    }
}
